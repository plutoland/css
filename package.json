{
  "name": "@plutoland/css",
  "version": "1.0.0-canary.1",
  "description": "A CSS toolkit that codifies the Pluto design language",
  "author": "The Pluto Authors",
  "license": "MIT",
  "homepage": "https://pluto.land/css",
  "repository": "https://github.com/plutoland/css",
  "bugs": "https://github.com/plutoland/css/issues",
  "sass": "src/pluto.scss",
  "style": "dist/pluto.css",
  "main": "",
  "keywords": [
    "pluto",
    "plutoland",
    "design-system",
    "web",
    "ui",
    "frontend",
    "framework",
    "functional-css",
    "utility-classes",
    "css",
    "sass"
  ],
  "scripts": {
    "start": "run-p watch serve",
    "css": "run-s css:**",
    "css:compile": "postcss src/pluto.scss -o dist/pluto.css --verbose",
    "css:minify": "postcss dist/pluto.css -u cssnano -o dist/pluto.min.css --no-map --verbose",
    "predist": "rimraf dist",
    "dist": "npm run css",
    "watch": "run-p watch:**",
    "watch:css": "nodemon --watch src/ --ext scss --exec \"npm run css\"",
    "serve": "light-server -s . -p 8001 -w \"**/*.html, dist/**\""
  },
  "devDependencies": {
    "autoprefixer": "^9.8.5",
    "cssnano": "^4.1.10",
    "light-server": "^2.7.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.1",
    "postcss-node-sass": "^2.1.8",
    "postcss-scss": "^2.1.1",
    "rimraf": "^3.0.2"
  }
}
